<div class="row">
  <h1><%= I18n.t('web.main.header')%></h1>
</div>

<div class="row">
  <p><%= link_to 'Cancel Order', '/cancel_my_order', class: 'btn btn-danger'%></p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
<% @vaccine_items.each do |item| %>
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
	      <h5 class="card-title"><strong><%= item.name %></strong></h5>
	      <p class="card-text"><%=item.description %></p>
	      <%= link_to I18n.t('web.main.register_text'), current_step_path(downcase_helper(item.name)), class: 'btn btn-primary' %>
      </div>
    <div class="card-footer">
	
    <small class="text-muted">
      <%= I18n.t('web.main.seats', quantity: @slots_quantity) %>
    </small>
  
      </div>
    </div>
  </div>
<% end %>
</div>

