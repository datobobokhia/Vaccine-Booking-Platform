<div class="row">
  <p id="notice"><%= notice %></p>
  <div class="col">
    <%= link_to 'New Unit', new_admin_business_unit_path, class: 'btn btn-success' %>
  </div>
</div>
<br/>

<div class="card">
    <div class="row">
      <div class="col">
				<h1><%= I18n.t('admin.units.list.header') %></h1>
					<table class="table table-striped">
						<thead>
							<tr>
								<th><%= I18n.t('admin.units.list.country_name') %></th>
								<th><%= I18n.t('admin.units.list.city_name') %></th>
								<th><%= I18n.t('admin.units.list.district_name') %></th>
								<th><%= I18n.t('admin.units.list.name') %></th>
								<th><%= I18n.t('admin.units.list.code') %></th>
								<th><%= I18n.t('admin.units.list.active') %></th>
								<th><%= I18n.t('admin.units.list.created_at') %></th>
								<th><%= I18n.t('admin.units.list.updated_at') %></th>
								<th colspan="2"></th>
							</tr>
						</thead>

						<tbody>
						<% @units.each do |unit| %>
							<tr>
								<td class="align-middle"><%= unit.country.name %></td>
								<td class="align-middle"><%= unit.city.name %></td>
								<td class="align-middle"><%= unit.district.name %></td>
								<td class="align-middle"><%= unit.name %></td>
								<td class="align-middle"><%= unit.code %></td>
								<td class="align-middle"><%= unit.active %></td>
								<td class="align-middle"><%= styled_date(unit.created_at)%></td>
								<td class="align-middle"><%= styled_date(unit.updated_at)%></td>
								<td class="align-middle"><%= link_to 'Edit', edit_admin_business_unit_path(unit) %></td>
								<td class="align-middle"><%= link_to 'Destroy', [:admin, unit], method: :delete, data: { confirm: 'Are you sure?' } %></td>
							</tr>
						<% end %>
					</table>
					<%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
</div> 